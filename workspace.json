{
  "version": 2,
  "cli": { "defaultCollection": "@nrwl/react" },
  "generators": {
    "@nrwl/react": {
      "application": { "style": "scss", "linter": "eslint", "babel": true },
      "component": { "style": "scss" },
      "library": { "style": "scss", "linter": "eslint" }
    }
  },
  "projects": {
    "react-uwp": {
      "root": "libs/react-uwp",
      "sourceRoot": "libs/react-uwp/src",
      "projectType": "library",
      "targets": {
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["libs/react-uwp/**/*.{ts,tsx,js,jsx}"]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/libs/react-uwp"],
          "options": {
            "jestConfig": "libs/react-uwp/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "fluent-app-ui-kit": {
      "root": "libs/fluent-app-ui-kit",
      "sourceRoot": "libs/fluent-app-ui-kit",
      "projectType": "library",
      "targets": {
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["libs/fluent-app-ui-kit/**/*.{ts,tsx,js,jsx}"]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/libs/fluent-app-ui-kit"],
          "options": {
            "jestConfig": "libs/fluent-app-ui-kit/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "next10-gui": {
      "root": "libs/next10/gui",
      "sourceRoot": "libs/next10/gui/src",
      "projectType": "library",
      "targets": {
        "build": {
          "executor": "@nrwl/web:package",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "dist/libs/next10/gui",
            "tsConfig": "libs/next10/gui/tsconfig.lib.json",
            "project": "libs/next10/gui/package.json",
            "entryFile": "libs/next10/gui/src/index.ts",
            "external": ["react", "react-dom"],
            "babelConfig": "@nrwl/react/plugins/bundle-babel",
            "rollupConfig": "@nrwl/react/plugins/bundle-rollup",
            "assets": [{ "glob": "README.md", "input": ".", "output": "." }]
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["libs/next10/gui/**/*.{ts,tsx,js,jsx}"]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/libs/next10/gui"],
          "options": {
            "jestConfig": "libs/next10/gui/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    }
  }
}
