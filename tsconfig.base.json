{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@react-uwp": ["libs/react-uwp/index.ts"],
      "@react-uwp/*": ["libs/react-uwp/src/*"],
      "@next10/gui": ["libs/next10/gui/src/index.ts"],
      "@fluent-app-ui-kit": ["libs/morajlab.bit/fluent-app-ui-kit/index.ts"],
      "@fluent-app-ui-kit/commandbar": [
        "libs/morajlab.bit/fluent-app-ui-kit/ui/commandbar/index.ts"
      ],
      "@react-macos-ui": ["libs/morajlab.bit/react-macos-ui/index.ts"],
      "@react-macos-ui/button": [
        "libs/morajlab.bit/react-macos-ui/ui/button/index.ts"
      ],
      "@react-macos-ui/checkbox": [
        "libs/morajlab.bit/react-macos-ui/ui/checkbox/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
